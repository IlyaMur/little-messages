{% extends "base.html.twig" %}

{% block title %}
	Posts
{% endblock %}

{% block body %}
	{% include "partials/_flash.html.twig" %}
	<div class="row">
		<div class="col-lg-8 col-md-10 mb-3">
			<h3>Posts</h3>
			<table class="table">
				<tr>
					<th>id</th>
					<th>title</th>
					<th>author</th>
					<th>created_at</th>
					<th>link</th>
					<th>delete</th>
				</tr>
				{% for post in posts %}
					<tr>
						<td>{{ post.id }}</td>
						<td>{{ post.title }}</td>
						<td>{{ post.author }}</td>
						<td>{{ post.createdAt }}</td>
						<td>
							<a href="{{ APP_ROOT }}posts/show/{{ post.id }}">link</a>
						</td>
						<td>
							<form method="post" action="{{ APP_ROOT }}admin/posts/destroy/{{ post.id }}">
								<button class="btn btn-sm btn-danger">delete</button>
							</form>
						</td>
					</tr>
				{% endfor %}

			</table>
		</div>
	{% endblock %}
