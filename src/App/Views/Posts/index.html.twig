{% extends "base.html.twig" %}

{% block title %}
	Posts
{% endblock %}

{% block body %}
	<div class="row mb-3">
		<div class="col-md-6">
			<h1>Posts</h1>
		</div>
		<div class="col-md-6">
			<a href="{{ appRoot }}/posts/add" class="btn btn-primary pull-right">
				<i class="fa fa-pencil">
					Add Post
				</i>
			</a>
		</div>
	</div>

	{% for post in posts %}
		<div class="card card-body mb-3">
			<h4 class="card-title">{{ post.title }}</h4>
			<div class="bg-light p-2 mb-3">
				Written by
				{{ post.author }}
				on
				{{ post.createdAt }}
			</div>
			<p class="card-text">{{ post.body }}</p>
			<a href="{{ appRoot }}/posts/show/{{ post.id }}" class="btn btn-dark">More</a>
		</div>
	{% endfor %}

{% endblock %}
