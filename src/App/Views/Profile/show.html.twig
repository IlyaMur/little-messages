{% extends "base.html.twig" %}

{% block title %}
	{{ user.name }}
	Profile
{% endblock %}

{% block body %}
	{% include "partials/_flash.html.twig" %}

	<div class="col-md-8 mx-auto">
		<a href="{{ APP_ROOT }}" class=" btn btn-light">
			<i class="fa fa-backward"></i>
			Back
		</a>
		<div class="card card-body bg-light mt-3 ">
			<h1 class="text-center mb-3">Profile</h1>
			<div class="row">
				<div class="col-lg-6 col-md-8 col-sm-8 mx-auto">
					{% if user.ava_link %}
						<img data-fancybox class="img-thumbnail" src="{{ user.ava_link }}" alt="user-avatar">
					{% else %}
						<img class="d-block mx-auto rounded" src="https://www.bootdey.com/img/Content/user_1.jpg" alt="user-avatar">
					{% endif %}
				</div>
			</div>

			<div class="row mx-auto mt-3">
				<div class="col-md-10 mx-auto ">

					<dl class="row mt-4">
						<dt class="col-sm-5">Name:</dt>
						<dd class="col-sm-7 text-right">{{ user.name }}</dd>

						<dt class="col-sm-5">Email:</dt>
						<dd class="col-sm-7 text-right">{{ currentUser.id == user.id ? user.email : '*user hide this data*'  }}</dd>

						<dt class="col-sm-5">Reg. date:</dt>
						<dd class="col-sm-7 text-right">{{ user.created_at | date("Y / m / d") }}</dd>
					</dl>


				</div>
			</div>
			<a class="btn btn-secondary " href="{{ APP_ROOT }}comments/{{ user.id }}/page/1">Show user comments
			</a>

			{% if currentUser.id == user.id %}
				<a class="btn btn-dark mt-5" href="{{ APP_ROOT }}profile/edit/{{ user.id }}">Edit

				</a>
			{% endif %}


			<div class="row">
				<div class="col-12 mt-3 mb-3"></div>

			</div>

		</div>


	</div>
</div>{% endblock %}
