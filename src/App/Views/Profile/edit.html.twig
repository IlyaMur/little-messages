{% extends "base.html.twig" %}

{% block title %}Profile
{% endblock %}

{% block body %}

	<h1>Profile</h1>


	{% if user.errors is not empty %}
		<p>Errors:</p>
		<ul>
			{% for error in user.errors %}
				<li>{{ error }}</li>
			{% endfor %}
		</ul>
	{% endif %}

	<form action="/profile/update" id="formProfile" method="post">

		<div>
			<label for="inputName">Name</label>
			<input value="{{ user.name }}" id="inputName" name="name" placeholder="name" type="text" required>
		</div>
		<div>
			<label for="inputEmail">Email address</label>
			<input value="{{ user.email }}" id="inputEmail" name="email" placeholder="email address" type="email" required>
		</div>
		<div>
			<label for="inputPassword">Password</label>
			<input id="inputPassword" name="password" placeholder="password" type="password" aria-describedby="helpBlock">
			<span id="helpBlock">Leave blank to keep current password</span>
		</div>

		<button type="submit">Save</button>
		<a href="/profile/show">Cancel</a>
	</form>

	<script>
		const userId = '{{ user.id }}';
	</script>

{% endblock %}
