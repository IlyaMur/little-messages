{% extends "base.html.twig" %}

{% block title %}Sign up
{% endblock %}

{% block body %}

	<h1>Sign up</h1>

	{% if user.errors is not empty %}
		<p>Errors:</p>
		<ul>
			{% for error in user.errors %}
				<li>{{ error }}</li>
			{% endfor %}
		</ul>
	{% endif %}

	<form action="/signup/create" method="post">
		<div>
			<label for="inputName">Name</label>
			<input value="{{ user.name }}" id="inputName" name="name" placeholder="name" type="text" autofocus>
		</div>
		<div>
			<label for="inputEmail">Email address
			</label>
			<input value="{{ user.email }}" id="inputEmail" name="email" placeholder="email address" type="text">

		</div>
		<div>
			<label for="inputPassword">Password
			</label>
			<input id="inputPassword" name="password" placeholder="password" type="password">
		</div>
		<div>
			<label for="inputPasswordConfirmation">Repeat password
			</label>
			<input id="inputPasswordConfirmation" name="passwordConfirmation" placeholder="repeat password" type="password">
		</div>
		<button type="submit">Sign up</button>
	</form>

{% endblock %}
