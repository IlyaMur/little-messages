{% extends "base.html.twig" %}

{% block title %}Forgot password
{% endblock %}

{% block body %}
	<h1>Request password reset</h1>

	<form action="/password/request-reset" method="post">
		<div class="form-group">

			<label for="inputEmail">Email address</label>
			<input class="form-control" type="email" name="inputEmail" autofocus required placeholder="Email address">

		</div>

		<button class="btn btn-primary" type="submit">Send password reset</button>

	</form>
{% endblock %}
