<nav aria-label="Page navigation">
	<ul class="pagination mt-3">
		{% if pagination.current > 1 %}
			<li class="page-item">
				<a class="page-link" href="{{ APP_ROOT }}comments/{{ user.id }}/page/{{ pagination.current - 1}}">Previous</a>
			</li>
		{% endif %}
		{% if pagination.paging > 0 %}
			{% for page in 1..pagination.paging %}
				<li class="page-item {{ pagination.current == page ? 'active' : '' }}">
					<a class="page-link" href="{{ APP_ROOT }}comments/{{ user.id }}/page/{{ page }}">{{ page }}</a>
				</li>
			{% endfor %}
		{% else %}
			<h4 class="">No posts yet...</h4>
		{% endif %}

		{% if pagination.current < pagination.paging %}
			<li class="page-item">
				<a class="page-link" href="{{ APP_ROOT }}comments/{{ user.id }}/page/{{ pagination.current + 1}}">Next</a>

			</li>
		{% endif %}
	</ul>
</nav>
