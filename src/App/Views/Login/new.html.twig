{% extends "base.html.twig" %}

{% block title %}Log in
{% endblock %}

{% block body %}

	<h1>Log in</h1>

	<form action="/login/create" method="POST">
		<div>
			<label for="inputEmail">Email address</label>
			<input value="{{ email }}" type="email" name="email" id="inputEmail" placeholder="Email address" autofocus>
		</div>
		<div>
			<label for="inputPassword">Password</label>
			<input type="password" name="password" id="inputPassword" placeholder="Password" autofocus>
		</div>
		<div>
			<label for="rememberMe">
				<input {{ rememberMe ? 'checked' : '' }} type="checkbox" name="rememberMe" id="rememberMe">Remember me
			</label>
		</div>

		<button type="submit">Log in</button>
		<a href="/password/forgot">Forgot password?</a>

	</form>

{% endblock %}
